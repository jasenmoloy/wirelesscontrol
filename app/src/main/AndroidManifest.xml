<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jasenmoloy.wirelesscontrol" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        <activity
            android:name="jasenmoloy.wirelesscontrol.MainActivity"
            android:label="@string/app_name" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Settings Activity  -->
        <activity
            android:name="jasenmoloy.wirelesscontrol.SettingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName="jasenmoloy.wirelesscontrol.MainActivity" >

            <intent-filter>
                <action android:name="android.intent.action.MANAGE_NETWORK_USAGE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <!-- Parent activity meta-data to support 4.0 (14) and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="jasenmoloy.wirelesscontrol.MainActivity" />
        </activity>

        <!-- Add Geofence Activity -->
        <activity android:name="jasenmoloy.wirelesscontrol.AddGeofenceActivity"
            android:label="@string/action_addgeofence"
            android:parentActivityName="jasenmoloy.wirelesscontrol.MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MANAGE_NETWORK_USAGE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <!-- Parent activity meta-data to support 4.0 (14) and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="jasenmoloy.wirelesscontrol.MainActivity" />
        </activity>
    </application>

</manifest>
